  let(:valid_session) { {} }

  describe "GET #index" do
    it "assigns all distance_searches as @distance_searches" do
      distance_search = DistanceSearch.create! valid_attributes
      get :index, params: {}, session: valid_session
      expect(assigns(:distance_searches)).to eq([distance_search])
    end
  end

  describe "GET #show" do
    it "assigns the requested distance_search as @distance_search" do
      distance_search = DistanceSearch.create! valid_attributes
      get :show, {id: distance_search.to_param}, session: valid_session
      expect(assigns(:distance_search)).to eq(distance_search)
    end
  end

  describe "GET #new" do
    it "assigns a new distance_search as @distance_search" do
      get :new, params: {}, session: valid_session
      expect(assigns(:distance_search)).to be_a_new(DistanceSearch)
    end
  end

  describe "GET #edit" do
    it "assigns the requested distance_search as @distance_search" do
      distance_search = DistanceSearch.create! valid_attributes
      get :edit, {id: distance_search.to_param}, session: valid_session
      expect(assigns(:distance_search)).to eq(distance_search)
    end
  end
 
  describe "POST #create" do
    context "with valid params" do
      it "creates a new DistanceSearch" do
        expect {
          post :create,  {distance_search: valid_attributes}, session: valid_session
        }.to change(DistanceSearch, :count).by(1)
      end

      it "assigns a newly created distance_search as @distance_search" do
        post :create, {distance_search: valid_attributes}, session: valid_session
        expect(assigns(:distance_search)).to be_a(DistanceSearch)
        expect(assigns(:distance_search)).to be_persisted
      end

      it "redirects to the created distance_search" do
        post :create, {distance_search: valid_attributes}, session: valid_session
        expect(response).to redirect_to(DistanceSearch.last)
