      it "re-renders the 'edit' template" do
        distance_search = DistanceSearch.create! valid_attributes
        put :update, {id: distance_search.to_param, distance_search: invalid_attributes}, session: valid_session
        expect(response).to render_template("edit")
      end
    end
  end

  describe "DELETE #destroy" do
    it "destroys the requested distance_search" do
      distance_search = DistanceSearch.create! valid_attributes
      expect {
        delete :destroy, {id: distance_search.to_param}, session: valid_session
