        post :create, {distance_search: invalid_attributes}, session: valid_session
        expect(assigns(:distance_search)).to be_a_new(DistanceSearch)
      end

      it "re-renders the 'new' template" do
        post :create, {distance_search: invalid_attributes}, session: valid_session
        expect(response).to render_template("new")
      end
    end
  end

    context "with invalid params" do
      it "assigns the distance_search as @distance_search" do
        distance_search = DistanceSearch.create! valid_attributes
        put :update, {id: distance_search.to_param, distance_search: invalid_attributes}, session: valid_session
        expect(assigns(:distance_search)).to eq(distance_search)
